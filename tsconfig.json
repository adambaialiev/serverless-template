{
	"compilerOptions": {
		"module": "commonjs",
		"rootDir": "./",
		"target": "es5",
		"allowJs": true,
		"lib": ["es6"],
		"noImplicitAny": true,
		"outDir": "./build",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src", "**/*.ts"]
}
